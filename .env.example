# InfluxDB Configuration
INFLUX_HOST=http://127.0.0.1:8086
INFLUX_ORG=K-Energy_Save
INFLUX_BUCKET=k_db
INFLUX_TOKEN=your-influx-token-here

# Alternative InfluxDB env names (for compatibility)
DOCKER_INFLUXDB_INIT_HOST=http://127.0.0.1:8086
DOCKER_INFLUXDB_INIT_ORG=K-Energy_Save
DOCKER_INFLUXDB_INIT_BUCKET=k_db
DOCKER_INFLUXDB_INIT_TOKEN=your-influx-token-here

# Grafana Configuration
GRAFANA_URL=http://127.0.0.1:3000
GRAFANA_PORT=3000

# Optional: Write protection for /api/influx/write
INFLUX_WRITE_TOKEN=optional-write-token

# Optional: Admin webhook protection
ADMIN_WEBHOOK_TOKEN=optional-webhook-token

# Optional: Seed endpoint protection
INFLUX_SEED_TOKEN=optional-seed-token

# Optional: Device aliases (JSON string)
DEVICE_ALIASES={}

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3001

# MQTT (for reference - not used in Edge Runtime)
MQTT_PORT=1883

# Note: For Cloudflare deployment, set these in:
# Cloudflare Dashboard > Pages > Settings > Environment variables
